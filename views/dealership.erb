<div class="row text-center">
  <h2><%= @dealership.name =%></h2>
  <p class="lead">
    Car Listing
  </p>
</div>

<ul>
  <% @dealership.cars.each do | car | %>
    <li><a href="/dealerships/<%= @dealership.id %>/cars/<%= car.id %>"><%= car.make %> <%= car.model %> <%= car.year %></a></li>
  <% end %>
</ul>

<div class="row text-center">
  <p class="lead">Add a Car</p>
</div>


<form action="/dealerships/<%= @dealership.id %>" method="post">
  <div class="form-group">
    <label for="make"></label>
    <input type="text" name="make" required class="form-control" placeholder="ex: 'Toyota' ">
  </div>

  <div class="form-group">
    <label for="model"></label>
    <input type="text" name="model" required class="form-control" placeholder="ex: 'Prius' ">
  </div>

  <div class="form-group">
    <label for="year"></label>
    <input type="text" name="year" required class="form-control" placeholder="ex: '2009' ">
  </div>

  <button class="btn btn-success" type="submit">Add</button>
</form>
